<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el bot칩n est치 presionado -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundButtons" /> <!-- Color de fondo al presionar -->
            <corners android:radius="70dp" /> <!-- Radio de esquinas, ajusta el valor para controlar el redondeo -->
        </shape>
    </item>

    <!-- Estado cuando el bot칩n est치 enfocado (hover) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundButtons" />   <!-- Color de fondo al enfocar -->
            <corners android:radius="70dp" />   <!-- Radio de esquinas, ajusta el valor para controlar el redondeo -->
        </shape>
    </item>


    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundFooter" /> <!-- Color de fondo por defecto -->
            <corners android:radius="70dp" /> <!-- Radio de esquinas, ajusta el valor para controlar el redondeo -->
        </shape>
    </item>
</selector>
